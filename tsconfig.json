{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es2018",
    "outDir": "./dist",
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "es2018",
      "dom"
    ],
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "workers-pool/src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
